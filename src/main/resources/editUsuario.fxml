<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="312.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.banco.controlador.EditUsuarioControlador">
   <FlowPane minHeight="-Infinity" prefHeight="20.0" prefWidth="400.0">
      <children>
         <Button fx:id="btnRegresar" mnemonicParsing="false" onAction="#regresar" text="Regresar">
            <FlowPane.margin>
               <Insets left="5.0" top="-15.0" />
            </FlowPane.margin>
         </Button>
      </children>
   </FlowPane>

    <Label text="Editar Usuario">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">

        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtNombre" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Correo electrónico:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtCorreo" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Dirección de residencia:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtDireccion" minHeight="30.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>

    <Button fx:id="btnEditar" minHeight="40.0" minWidth="130.0" onAction="#editarUsuario" style="-fx-background-color: #00807a; -fx-text-fill: white" text="Actualizar" />

</VBox>
